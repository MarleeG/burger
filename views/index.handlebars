<h1 class="header">Burger Burger</h1>

{{!-- Burger Contents --}}


<div class="container-fluid">
    <div class="row">

        {{!-- Whats on the menu? --}}
        <div class="col-lg-6">
            <div class="menu">

                {{!-- Menu header --}}
                <div class="col-lg-12">
                    <h2 class="text-center">Menu</h2>
                </div>

                {{!-- original menu items --}}

                <div class="col-lg-12">
                    <form action="/" method="POST">
                        <br> What do you like?
                        <input type="text" name="added-menu-item" id="wanted-burger-input">
                        <br> {{!--
                        <input type="submit" value="Submit"> --}}
                        <input type="submit" id="submit-button" value="Submit">
                    </form>
                </div>
            </div>
        </div>


        <div class="col-lg-6">
            <div class="col-lg-12 d-flex justify-content-center">
                <div id="top-bun">

                </div>
            </div>
            <div class="col-lg-12 d-flex justify-content-center">
                <div id="lettuce">

                </div>
            </div>
            <div class="col-lg-12 d-flex justify-content-center">
                <div id="tomatoes">

                </div>
            </div>
            <div class="col-lg-12 d-flex justify-content-center">
                <div id="cheese">

                </div>
            </div>

            <div class="col-lg-12 d-flex justify-content-center">
                <div id="meat">
                    <div class="container on-the-menu">
                        <div class="row">
                            <div class="col-lg-6 first-section">
                                <h6 class="text-center">Munchies</h6>

                                {{!-- Current menu items --}}
                                <div class="col-lg-12">
                                    <div class="my-menu">
                                        <ul>
                                            {{#each burgers}}
                                            <li class="current-menu-items">
                                                {{#if this.devoured}}
                

                                                {{else}}
                                                 <p>{{this.id}}. {{this.name}}</p>
                                                <p>Eaten: false</p>
                                                <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
                                                <button class="eat-burger" data-id="{{this.id}}">Eat!</button>
                                                {{/if}}
                                            </li>
                                            {{/each}}

                                        </ul>
                                    </div>
                                </div>


                            </div>
                            <div class="col-lg-6 second-section">
                                <h6 class="text-center">Eaten</h6>

                                {{!-- Current menu items --}}
                                <div class="col-lg-12">
                                    <div class="my-menu">
                                        <ul>
                                            {{#each burgers}}
                                            <li class="current-menu-items">


                                                {{#if this.devoured}}
                                                <p>{{this.id}}. {{this.name}}</p>
                                                {{/if}}
                                            </li>
                                            {{/each}}

                                        </ul>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 d-flex justify-content-center">
                <div id="bottom-bun">

                </div>
            </div>
        </div>


    </div>
</div>

{{!-- On the Menu --}}